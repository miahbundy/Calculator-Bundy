<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:id="@+id/activity_main"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin_land">
    android:columnCount="5"
    android:rowCount="5" >

    <TextView
        android:text="TextView"
        android:layout_width="351dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="0"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center" />

    <Button
        android:text="@string/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seven"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="1"
        android:layout_column="0" />

    <Button
        android:text="@string/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eight"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="1"
        android:layout_column="1" />

    <Button
        android:text="@string/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nine"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="1"
        android:layout_column="2" />

    <Button
        android:text="@string/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/six"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="2"
        android:layout_column="2" />

    <Button
        android:text="@string/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/five"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="2"
        android:layout_column="1" />

    <Button
        android:text="@string/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/four"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="2"
        android:layout_column="0" />

    <Button
        android:text="@string/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zero"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="4"
        android:layout_column="1" />

    <Button
        android:text="@string/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/one"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="3"
        android:layout_column="0" />

    <Button
        android:text="@string/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/three"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="3"
        android:layout_column="2" />

    <Button
        android:text="@string/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/two"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="3"
        android:layout_column="1" />

    <Button
        android:text="@string/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointBut"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="4"
        android:layout_column="0" />

    <Button
        android:text="@string/mult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multBut"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="2"
        android:layout_column="3" />

    <Button
        android:text="@string/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subBut"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="3"
        android:layout_column="3" />

    <Button
        android:text="@string/equal"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_columnSpan="2"
        android:id="@+id/equalBut"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="4"
        android:layout_column="2" />

    <Button
        android:text="@string/posOrNeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/posOrNegBut"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="4"
        android:layout_column="4" />

    <Button
        android:text="@string/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addBut"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="3"
        android:layout_column="4" />

    <Button
        android:text="@string/div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divBut"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="2"
        android:layout_column="4" />

    <Button
        android:text="@string/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cBut"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="1"
        android:layout_column="3" />

    <Button
        android:text="@string/ce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ceBut"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_row="1"
        android:layout_column="4" />

</GridLayout>